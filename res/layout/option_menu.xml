<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	android:orientation = "vertical"
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent">
	<TextView
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content"
		android:layout_marginBottom = "10sp"
		android:gravity = "center"
		android:padding = "15sp"
		android:background = "@drawable/img_item_background"
		android:text = "Options"
		android:textColor = "#000000"
		android:textSize = "12pt"/>
	<LinearLayout
		android:orientation = "vertical"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content">
		<TextView
			android:id = "@+id/lan_text"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:gravity = "center"
			android:text = "Language"
			android:textSize = "10pt"
			android:textColor = "#FFFFFF"/>
		<RadioGroup
			android:id = "@+id/lan_group"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "60sp"
			android:orientation = "vertical">
			<RadioButton
				android:id = "@+id/lan_eng"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "English"/>
			<RadioButton
				android:id = "@+id/lan_traChi"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "Traditional Chinese"/>
			<RadioButton
				android:id = "@+id/lan_simChi"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "Simplified Chinese"/>
		</RadioGroup>
	</LinearLayout>
	<LinearLayout
		android:orientation = "vertical"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content">
		<TextView
			android:id = "@+id/pic_text"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:gravity = "center"
			android:text = "Display Images"
			android:textSize = "10pt"
			android:textColor = "#FFFFFF"/>
		<RadioGroup
			android:id = "@+id/pic_group"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal"
			android:gravity = "center">
			<RadioButton
				android:id = "@+id/pic_on"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "On"/>
			<RadioButton
				android:id = "@+id/pic_off"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "Off"/>
		</RadioGroup>
	</LinearLayout>
	<Button
		android:id = "@+id/preferenceOK"
		android:layout_width = "160sp"
		android:layout_height = "wrap_content"
		android:layout_gravity = "center"
		android:layout_alignParentBottom = "true"
		android:text = "OK"
		android:textSize = "10pt"/>
</LinearLayout>