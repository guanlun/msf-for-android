<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#ffffff">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1">
		    <TextView
		       	android:id="@+id/about_us_title"
		       	android:layout_width="fill_parent"
		       	android:layout_height="wrap_content"
		       	android:padding="10dp"
		       	android:text="@string/about_us"
		       	android:textStyle="bold"
		       	android:textColor="#ee0000"
		       	android:textSize="12pt"/>
			<TextView
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:padding="10dp"
			    android:text="@string/charter_title"
			    android:textStyle="bold"
			    android:textColor="#000000"
			    android:textSize="10pt"/>
			<LinearLayout
				android:id="@+id/charter_layout"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/chater_title"
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content" 
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingBottom="12dp"
				    android:text="@string/charter_content0"
				    android:textColor="#000000"
				    android:textSize="8pt"/>
					<LinearLayout
					    android:id="@+id/charter_display_layout"
					    android:orientation="vertical"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content">
					  	<TextView
						    android:id="@+id/charter_display_1"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:paddingLeft="20dp"
						    android:paddingRight="20dp"
						    android:paddingBottom="10dp"
						    android:text="@string/charter_content1"
						    android:textColor="#666666"
						    android:textSize="7pt" />
					  	<TextView
						    android:id="@+id/charter_display_2"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:paddingLeft="20dp"
						    android:paddingRight="20dp"
						    android:paddingBottom="10dp"
						    android:text="@string/charter_content2"
						    android:textColor="#666666"
						    android:textSize="7pt" />
					  	<TextView
						    android:id="@+id/charter_display_3"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:paddingLeft="20dp"
						    android:paddingRight="20dp"
						    android:paddingBottom="10dp"
						    android:text="@string/charter_content3"
						    android:textColor="#666666"
						    android:textSize="7pt" />
					  	<TextView
						    android:id="@+id/charter_display_4"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:paddingLeft="20dp"
						    android:paddingRight="20dp"
						    android:paddingBottom="10dp"
						    android:text="@string/charter_content4"
						    android:textColor="#666666"
						    android:textSize="7pt" />
				</LinearLayout>
			</LinearLayout>
			<TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:padding="10dp"
			    android:text="@string/contact_us_title"
			    android:textStyle="bold"
			    android:textColor="#000000"
			    android:textSize="10pt"/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:textColor="#000000"
				android:textSize="8pt"
				android:text="@string/contact_us_content"/>

	    </LinearLayout>
	</ScrollView>
</LinearLayout>