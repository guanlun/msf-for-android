<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
    <RadioGroup 
        android:id="@+id/lang_sel_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <RadioButton
            android:id="@+id/lang_sel_radio_en"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="English">
        </RadioButton>
        
        <RadioButton
            android:id="@+id/lang_sel_radio_tc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="繁體中文">
        </RadioButton>
        
        <RadioButton
            android:id="@+id/lang_sel_radio_sc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="简体中文">
        </RadioButton>
        
    </RadioGroup>
    
</LinearLayout>